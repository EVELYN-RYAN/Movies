@{
    ViewData["Title"] = "All Movies";
}
@model List<MovieRes>

<table class="table table-bordered">
    <thead class="font-weight-bold">
        <td>Category</td>
        <td>Title</td>
        <td>Year</td>
        <td>Director</td>
        <td>Rating</td>
        <td>Edited</td>
        <td>LentTo</td>
        <td>Notes</td>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
        <tr>
            <td>@m.Category.CategoryName</td>
            <td>@m.Title</td>
            <td>@m.Year</td>
            <td>@m.Director</td>
            <td>@m.Rating</td>
            <td>@m.Edited</td>
            <td>@m.LentTo</td>
            <td>@m.Notes</td>
            <td> <a asp-controller="Home" asp-action="Edit" asp-route-movieid="@m.MovieID">Edit</a></td>
            <td> <a asp-controller="Home" asp-action="Delete" asp-route-movieid="@m.MovieID">Delete</a></td>
        </tr>
        }
    </tbody>
</table>